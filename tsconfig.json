{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "packages/fhevm-sdk/**/*",
    "packages/hardhat/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "packages/*-showcase/**/*",
    "node_modules"
  ]
}
